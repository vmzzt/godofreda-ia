{
  "name": "godofreda-dashboard",
  "version": "1.0.0",
  "description": "Dashboard profissional para IA VTuber Godofreda com chat multimodal e monitoramento em tempo real",
  "private": true,
  "author": "Godofreda Team",
  "license": "MIT",
  "homepage": ".",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "chart.js": "^4.5.0",
    "framer-motion": "^10.12.16",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-hot-toast": "^2.4.1",
    "react-scripts": "5.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "dev": "react-scripts start",
    "build": "react-scripts build",
    "build:prod": "GENERATE_SOURCEMAP=false react-scripts build",
    "test": "react-scripts test",
    "test:watch": "react-scripts test --watchAll",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "test:ci": "react-scripts test --watchAll=false --coverage --ci",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write src/**/*.{js,jsx,ts,tsx,css,md,json}",
    "format:check": "prettier --check src/**/*.{js,jsx,ts,tsx,css,md,json}",
    "eject": "react-scripts eject",
    "analyze": "npm run build && npx serve -s build",
    "preview": "npm run build && npx serve -s build -l 3001",
    "clean": "rm -rf build node_modules/.cache",
    "deps:check": "npx npm-check-updates",
    "deps:update": "npx npm-check-updates -u",
    "deps:audit": "npm audit",
    "deps:fix": "npm audit fix"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "warn",
      "prefer-const": "error"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "npm-check-updates": "^16.0.0",
    "postcss": "^8.4.24",
    "prettier": "^2.8.0",
    "serve": "^14.2.0",
    "tailwindcss": "^3.3.2"
  },
  "proxy": "http://localhost:8000",
  "repository": {
    "type": "git",
    "url": "https://github.com/godofreda/dashboard.git"
  },
  "keywords": [
    "react",
    "dashboard",
    "ai",
    "vtuber",
    "chat",
    "multimodal",
    "godofreda"
  ],
  "bugs": {
    "url": "https://github.com/godofreda/dashboard/issues"
  }
}
